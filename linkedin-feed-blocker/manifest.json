{
  "manifest_version": 3,
  "name": "LinkedIn Feed Blocker",
  "version": "1.42",
  "description": "Blocks the LinkedIn feed after a configurable number of minutes",
  "author": "Ferdinand Koenig",
  "permissions": ["storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "options_page": "options.html"
}
